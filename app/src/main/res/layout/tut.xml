<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/roundcornershape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="T I P S"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins_light"
        android:text="- Check the Desired Status/Story..."
        android:textSize="17sp"
        android:typeface="serif" />
    <TextView
        android:textSize="17sp"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins_light"
        android:text="- Come Back to App, Click on any Image or Video to View..." />
    <TextView
        android:textSize="17sp"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins_light"
        android:text="- Click the Save Button...
The Image/Video is Instantly saved to your Gallery :)" />
    <TextView
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/poppins_light"
        android:text="- You can also Use Multiple Saving.
Hold on any Status to activate Multi Selection Mode, Select all the Statuses you want to Save &amp; Click on Save Icon in the Toolbar." />

    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundbuttons"
        android:gravity="center_vertical"
        android:src="@drawable/ic_baseline_check_24"

        />
</LinearLayout>