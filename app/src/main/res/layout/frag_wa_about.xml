<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/image_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/whatsapp_psd" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_app_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_about"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text="Andrino Apps"
            android:textSize="22sp"
             />
      <!--  <View
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_below="@+id/title_app_about"
            android:background="@color/greycolor"
            />-->

        <TextView
            android:id="@+id/text_app_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_app_about"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="22dp"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text="Status Saver : Direct Download" />

        <TextView

            android:id="@+id/text_app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_app_about"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text="App Version: 0.1" />
        <TextView

            android:id="@+id/text_app_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_app_version"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/poppins_light"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text="Status Saver image and video collector is a storage house for saving stories, picture, photos and new statuses that gives easiness to reuse the status in term of watching again and report on status. Best save pictures and video's status doesn't need to ask someone to send. From the statuses store, any undesired image or video can be deleted." />
<!--
        <View
            android:id="@+id/line_2"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/text_app_detail"
            android:background="@color/greycolor"
            />-->
        <TextView

            android:id="@+id/text_app_rights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_app_detail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text="Copyrights Â© 2020 Andrino Apps \n All Rights Reseved" />
    </RelativeLayout>
</ScrollView>